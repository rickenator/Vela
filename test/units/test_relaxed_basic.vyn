fn<Int> main() -> {
    // Using relaxed syntax for local variables
    Int x = 42
    String msg = "Hello"
    
    // Using standard syntax
    var<Float> pi = 3.14
    
    // Using constants with relaxed syntax
    const Bool flag = true
    
    // Type inference with auto
    auto y = x * 2
    
    return y  // Should return 84
}
