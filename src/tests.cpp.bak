    // Test basic dereference of a pointer
    var<Int> x = 42;
    var<loc<Int>> p;
    
    unsafe {
        p = loc(x);           // Create pointer to x
        at(p) = 100;          // Modify through pointer
    }
    
    // The modification through p should affect x
    return x;
}
)";
